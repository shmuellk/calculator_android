<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="TextView"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="20dp"
        android:background="#67929292"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="7"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="8"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="9"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:onClick="divide"
            android:background="@drawable/simbols_button_style"
            android:text="รท"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_fore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="4"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="5"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_double"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:onClick="multiply"
            android:background="@drawable/simbols_button_style"
            android:text="x"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="1"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_tow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="2"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="3"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/simbols_button_style"
            android:onClick="add"
            android:text="+"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/clear_button_style"
            android:onClick="clearDisplay"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/number_button_style"
            android:onClick="setNumber"
            android:text="0"
            android:textSize="34sp"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/button_Equal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/equal_button_style"
            android:onClick="setRES"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:width="90dp"
            android:height="90dp"
            android:onClick="minus"
            android:background="@drawable/simbols_button_style"
            android:text="-"
            android:textSize="34sp" />
    </LinearLayout>
</LinearLayout>